<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xky.dao.TeacherDao">
    <select id="selectAllTeacher" resultType="Teacher">
       select * from teacher
    </select>

    <insert id="insertQuestionBank">
        insert into questionBank value (null, #{question},#{answers},#{trueAnswer},#{type},#{subjectId},#{teacherId},#{available});
    </insert>

    <select id="selectAllSubject" resultType="Subject">
        select * from subject
    </select>

    <select id="selectCurrentTeacherQuestionBank" resultType="QuestionBank">
        select * from questionBank where teacherId = #{teacherId}
    </select>
</mapper>